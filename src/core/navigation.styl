navigation
  z-index 1000
  position fixed
  top 0
  left 0
  right 0
  ul
    margin 10px 20px
    padding 0
    list-style none
    &.left
      float left
    &.right
      float right
    li
      float left
      padding 10px
      position relative
      &:after
        display block
        position absolute
        bottom 0
        left 0
        right 0
        content ""
        transition transition-time transition-timing-function all
        background-color link-color
        background linear-gradient(rgba(0, 0, 0, 0), link-color)
        width 100%
        height 5px
        opacity 0
        z-index -1
      &.active
        &:after
          opacity 1
          height 1px
          background-color link-active-color
          background linear-gradient(rgba(0, 0, 0, 0), link-active-color)
        a
          color link-active-color
