.ui-view-container
  position relative

.view-animation
  position absolute
  left 0
  right 0

  transform-origin 50% 50%
  transition 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all

  &.ng-enter
    opacity 0
  &.ng-enter-active
    opacity 1
  &.ng-leave
    opacity 1
    transform scale3d(1, 1, 1)
  &.ng-leave-active
    opacity 0
    transform scale3d(.8, .8, .8)
