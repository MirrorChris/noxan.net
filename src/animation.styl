.view-animation
  &.ng-enter, &.ng-leave, .wrapper-inner
    transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
    transform-origin: 50% 50%
  &.ng-enter .wrapper-inner
    opacity: 0
  &.ng-enter-active .wrapper-inner
    opacity: 1
  &.ng-leave-active .wrapper-inner
    opacity: 1
    transform: scale(1)
  &.ng-leave .wrapper-inner
    opacity: 0
    transform: scale(0.8)
